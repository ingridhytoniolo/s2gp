<%= render 'app/shared/header' %>
<div class="flex items-center mb-4">
  <h1><%= t('pages.app.pages.news.title') %></h1>
  <div class="flex flex-auto justify-end">
    <% if policy(News).new? %>
      <%= link_to t('shared.new'), new_app_news_path, class: 'open-modal button-link', remote: true %>
    <% end %>
  </div>
</div>
<div class="max-w-screen-md mx-auto flex flex-wrap">
  <%= render partial: 'menu', locals: { submenu: @submenu } %>
  <% if @news.empty? %>
    <div class="w-full py-8 text-center text-gray-400"><%= t('pages.app.pages.news.not_found') %></div>
  <% end %>
  <% @news.each do |news| %>
    <%= render partial: 'news', locals: { news: news } %>
  <% end %>
</div>
<%= render 'app/shared/modal' %>
