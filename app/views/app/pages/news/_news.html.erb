<div class="pb-4 w-full">
  <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-md overflow-hidden">
    <% if news.cover.attached? %>
      <%= image_tag news.cover, class: 'lg:h-48 md:h-36 w-full object-cover object-center bg-gray-100' %>
    <% end %>
    <div class="p-4">
      <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">
        <%= news.created_at.strftime('%d/%m/%Y') %>
      </h2>
      <h1 class="title-font text-lg font-medium text-gray-900 mb-3">
        <%= link_to news.title, app_news_path(news) %>
      </h1>
      <p class="leading-relaxed mb-3">
        <%= news.description&.gsub(/\n/, '<br/>')&.html_safe %>
      </p>
      <div class="flex justify-end">
        <% if news.profile.avatar.attached? %>
          <%= image_tag news.profile.avatar, class: 'rounded-full w-8 h-8 object-cover object-center bg-gray-100' %>
        <% else %>
          <div class="rounded-full w-8 h-8 object-cover object-center flex justify-center items-center text-gray-300 bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        <% end %>
        <span class="inline-flex items-center ml-2 text-sm text-gray-400">
          <%= news.profile.name %>
        </span>
      </div>
    </div>
  </div>
</div>
