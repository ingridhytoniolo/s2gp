<%= render 'app/shared/header' %>
<div class="flex items-center mb-4">
  <h1><%= t('pages.app.pages.announcements.title') %></h1>
  <div class="flex flex-auto justify-end">
    <% if policy(Announcement).new? %>
      <%= link_to t('shared.new'), new_app_announcement_path, class: 'open-modal button-link', remote: true %>
    <% end %>
  </div>
</div>
<div class="max-w-screen-md mx-auto flex flex-wrap">
  <%= render partial: 'menu', locals: { submenu: @submenu } %>
  <% if @announcements.empty? %>
    <div class="w-full py-8 text-center text-gray-400"><%= t('pages.app.pages.announcements.not_found') %></div>
  <% end %>
  <% @announcements.each do |announcement| %>
    <%= render partial: 'announcement', locals: { announcement: announcement } %>
  <% end %>
</div>
<%= render 'app/shared/modal' %>
