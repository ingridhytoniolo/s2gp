<%= render 'layouts/header' %>
<div class="container mx-auto p-4">
  <div class="mb-4 text-center">
    <h1><%= t('pages.team.title') %></h1>
    <h2><%= t('pages.team.sub_title') %></h2>
  </div>
  <div class="flex flex-wrap justify-center text-center">
    <% @team.each do |member| %>
      <div class="p-4 w-full lg:w-1/4 md:w-1/2">
        <div class="flex flex-col">
          <img alt="team" class="rounded-full w-48 h-48 object-cover object-center mx-auto mb-4 bg-gray-100" src="<%= member[:photo_url] %>">
          <p class="mb-1"><%= member[:name] %></p>
          <p class="mb-2 text-sm text-gray-600"><%= member[:role] %></p>
          <span class="inline-flex justify-center">
            <a class="ml-2 px-2 py-1 rounded text-gray-600 text-xs uppercase font-semibold bg-gray-100" href="<%= member[:lattes_url] %>" target="_new">
              Lattes
            </a>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
