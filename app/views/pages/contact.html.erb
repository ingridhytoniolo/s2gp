<%= render 'layouts/header' %>
<div class="container mx-auto p-4">
  <div class="mb-4 text-center">
    <h1><%= t('pages.contact.title') %></h1>
    <h2><%= t('pages.contact.sub_title') %></h2>
  </div>
  <div class="flex flex-wrap">
    <div class="w-full lg:w-2/3 md:w-1/2 h-64 md:h-auto p-8 bg-gray-100 rounded-lg overflow-hidden relative">
      <iframe width="100%" height="100%" class="absolute inset-0" frameborder="0" title="map" marginheight="0" marginwidth="0" scrolling="no" src="https://www.google.com/maps/embed/v1/place?key=<%= @group[:google_maps_api_key] %>&q=<%= @group[:address] %>" loading="lazy"></iframe>
    </div>
    <div class="w-full lg:w-1/3 md:w-1/2 py-4 md:p-4">
      <div class="mb-4 text-lg font-bold">
        <%= @group["name_#{I18n.locale.to_s.sub('-','_')}".to_sym] %>
      </div>
      <div class="mb-4">
        <%= simple_format(@group[:address]) %>
      </div>
      <div>
        <%= simple_format(@group[:contact_information]) %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
