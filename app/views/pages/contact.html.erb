<%= render 'layouts/header' %>
<div class="container mx-auto p-4">
  <div class="mb-4 text-center">
    <h1><%= t('pages.contact.title') %></h1>
    <h2><%= t('pages.contact.sub_title') %></h2>
  </div>
  <div class="flex flex-wrap">
    <div class="w-full lg:w-2/3 md:w-1/2 h-64 md:h-auto p-8 bg-gray-100 rounded-lg overflow-hidden relative">
      <iframe width="100%" height="100%" class="absolute inset-0" frameborder="0" title="map" marginheight="0" marginwidth="0" scrolling="no" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3602.4489396618633!2d-49.237911084441485!3d-25.456680583776226!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94dce4df926b4ea3%3A0x88b4331e264d4ee4!2sSetor%20de%20Educa%C3%A7%C3%A3o%20Profissional%20e%20Tecnol%C3%B3gica%20UFPR!5e0!3m2!1spt-BR!2sbr!4v1633464080126!5m2!1spt-BR!2sbr" loading="lazy"></iframe>
    </div>
    <div class="w-full lg:w-1/3 md:w-1/2 py-4 md:p-4">
      <%= form_tag('/contact') do %>
        <div class="field">
          <%= label_tag :name, t('helpers.labels.name') %>
          <%= text_field_tag :name, nil, required: true %>
        </div>
        <div class="field">
          <%= label_tag :email, t('helpers.labels.email') %>
          <%= email_field_tag :email, nil, required: true %>
        </div>
        <div class="field">
          <%= label_tag :message, t('helpers.labels.message')%>
          <%= text_area_tag :message, nil, required: true %>
        </div>
        <div class="actions">
          <%= button_tag t('pages.contact.submit'), type: :submit, class: 'primary w-full',
            data: { disable_with: '<div class="flex items-center justify-center my-2 space-x-1 animate-pulse"><div class="w-2 h-2 bg-gray-400 rounded-full"></div><div class="w-2 h-2 bg-gray-400 rounded-full"></div><div class="w-2 h-2 bg-gray-400 rounded-full"></div></div>' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
