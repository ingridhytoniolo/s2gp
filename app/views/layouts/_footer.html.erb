<footer class="p-4">
  <div class="container p-4 mx-auto flex items-center sm:flex-row flex-col border-t-2 border-gray-50">
    <a class="flex title-font font-medium items-center md:justify-start justify-center text-gray-900">
      <%= @group[:short_name] %>
    </a>
    <p class="text-sm text-gray-500 sm:ml-4 sm:pl-4 sm:border-l-2 sm:border-gray-200 sm:py-2 sm:mt-0 mt-4">
      <%= @group["name_#{I18n.locale.to_s.sub('-','_')}".to_sym] %>
    </p>
    <span class="inline-flex sm:ml-auto sm:mt-0 mt-4 justify-center sm:justify-start">
      <% if @group[:facebook_url].present? %>
        <%= link_to raw('<svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
            <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
          </svg>'), @group[:facebook_url], class: 'text-gray-500', target: '_new' %>
      <% end %>
      <% if @group[:twitter_url].present? %>
        <%= link_to raw('<svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
            <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
          </svg>'), @group[:twitter_url], class: 'text-gray-500', target: '_new' %>
      <% end %>
      <% if @group[:instagram_url].present? %>
        <%= link_to raw('<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01"></path>
          </svg>'), @group[:instagram_url], class: 'text-gray-500', target: '_new' %>
      <% end %>
    </span>
  </div>
</footer>
