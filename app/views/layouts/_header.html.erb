<%
  menu = [
    {
      name: t('pages.team.title'),
      url: team_path
    },{
      name: t('pages.contact.title'),
      url: contact_path
    }
  ]
%>
<header class="text-gray-600 body-font shadow-sm">
  <div class="container mx-auto flex flex-wrap flex-row p-4 items-center">
    <div class="flex flex-wrap w-1/4 md:w-2/5">
      <nav class="flex md:hidden flex-wrap items-center">
        <button class="appearance-none outline-none open-mobile-menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
        </button>
      </nav>
      <nav class="hidden md:flex flex-wrap text-base items-center justify-start">
        <% menu.each do |i| %>
          <%= link_to i[:name], i[:url], class: 'mr-5 hover:text-gray-900' %>
        <% end %>
      </nav>
    </div>
    <div class="flex flex-wrap w-1/2 md:w-1/5 items-center justify-center">
      <%= link_to raw('<span class="text-center text-black text-xl font-semibold">S2GP</span>'), root_path %>
    </div>
    <div class="flex flex-wrap w-1/4 md:w-2/5 items-center justify-end">
      <div class="flex md:hidden flex-wrap items-center">
        <% if user_signed_in? %>
          <%= link_to t('devise.sessions.new.sign_out'), destroy_user_session_path, method: :delete, class: 'text-xs font-semibold text-gray-600 hover:text-gray-900 uppercase bg-gray-100 border-0 py-2 px-4 focus:outline-none hover:bg-gray-200 rounded' %>
        <% else %>
          <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: 'text-xs font-semibold text-gray-600 hover:text-gray-900 uppercase bg-gray-100 border-0 py-2 px-4 focus:outline-none hover:bg-gray-200 rounded' %>
        <% end %>
      </div>
      <div class="hidden md:flex flex-wrap items-center">
        <% if user_signed_in? %>
          <span class="mr-4 text-xs"><%= current_user.email %></span>
          <%= link_to t('devise.sessions.new.sign_out'), destroy_user_session_path, method: :delete, class: 'text-xs font-semibold text-gray-600 hover:text-gray-900 uppercase bg-gray-100 border-0 py-2 px-4 focus:outline-none hover:bg-gray-200 rounded' %>
        <% else %>
          <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: 'text-xs font-semibold text-gray-600 hover:text-gray-900 uppercase bg-gray-100 border-0 py-2 px-4 focus:outline-none hover:bg-gray-200 rounded' %>
        <% end %>
      </div>
    </div>
  </div>
</header>
<div class="mobile-menu hidden fixed z-10 inset-0 overflow-y-auto">
  <div class="flex h-screen">
    <div class="background fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <div class="w-80 bg-white p-4 overflow-hidden shadow-xl transform">
      <div class="grid grid-cols-2 items-center">
        <span class="text-black text-xl font-semibold">S2GP</span>
        <button class="appearance-none close-mobile-menu justify-self-end">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <nav class="nav flex flex-col pt-4">
        <% menu.each do |i| %>
          <%= link_to i[:name], i[:url], class: 'mb-4 hover:text-gray-900' %>
        <% end %>
      </nav>
    </div>
  </div>
</div>
<script>
  var btnOpen = document.querySelector(".open-mobile-menu");
  var btnClose = document.querySelector(".close-mobile-menu");
  var menu = document.querySelector(".mobile-menu");
  var background = document.querySelector(".background");
  var nav = document.querySelector(".nav");
  
  background.addEventListener("click", () => {
    menu.classList.add("hidden");
  })
  nav.addEventListener("click", () => {
    menu.classList.add("hidden");
  })
  btnOpen.addEventListener("click", () => {
    menu.classList.remove("hidden");
  });
  btnClose.addEventListener("click", () => {
    menu.classList.add("hidden");
  });
</script>
