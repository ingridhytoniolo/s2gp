<div class="flex items-center justify-center py-16">
  <div class="w-full max-w-sm">
    <div class="flex-none">
      <a href="<%= root_path %>" class="flex flex-col text-center mb-8">
        <span class="text-center text-black text-2xl font-semibold">S2GP</span>
      </a>
      <h1 class="text-xl font-semibold">
        <%= t('devise.views.sessions.new.title') %><br />
        <span class="font-normal"><%= t('devise.views.sessions.new.sub_title') %></span>
      </h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'pt-4 pb-4' }) do |f| %>
        <% if alert.present? %>
          <div class="bg-red-100 text-xs text-red-700 px-4 py-3 mb-4 rounded relative" role="alert">
            <span class="block sm:inline"><%= alert %></span>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autocomplete: 'email', placeholder: '', required: true %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: 'current-password', placeholder: '', required: true %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <p class="flex justify-end inline-block mt-4 text-xs">
            <%= link_to t('devise.links.new_password'), new_password_path(resource_name) %>
          </p>
        <% end %>
        <div class="actions">
          <%= f.button t('devise.views.sessions.new.submit'), type: :submit, class: 'primary w-full',
            data: { disable_with: '<div class="flex items-center justify-center my-2 space-x-1 animate-pulse"><div class="w-2 h-2 bg-gray-400 rounded-full"></div><div class="w-2 h-2 bg-gray-400 rounded-full"></div><div class="w-2 h-2 bg-gray-400 rounded-full"></div></div>' } %>
        </div>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
