<%= render 'layouts/header' %>
<div class="container mx-auto p-4">
  <div class="mb-4 text-center">
    <h1><%= t('pages.projects.title') %></h1>
    <h2><%= t('pages.projects.sub_title') %></h2>
  </div>
  <div class="flex flex-wrap justify-center">
    <% @projects.each do |project| %>
      <div class="p-4 w-full lg:w-1/3 md:w-1/2">
        <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
          <% if project.avatar.attached? %>
            <%= image_tag project.avatar, class: 'w-full h-48 object-cover object-center mx-auto bg-gray-100' %>
          <% else %>
            <div class="w-full h-48 object-cover object-center mx-auto flex justify-center items-center text-gray-300 bg-gray-100">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          <% end %>

          <div class="p-6">
            <h2 class="tracking-widest text-xs font-medium text-gray-400 mb-1">
              <%= Project.human_attribute_name("statuses.#{project.status}") %>
            </h2>
            <h1 class="text-lg font-medium text-gray-900 mb-3">
              <%= project.title %>
            </h1>
            <p class="text-sm leading-relaxed mb-3">
              <%= project.main_goal %>
            </p>
            <div class="flex items-center">
              <%= link_to raw("#{t('pages.projects.buttons.open')}
                <svg class='w-4 h-4 ml-2' viewBox='0 0 24 24' stroke='currentColor' stroke-width='2' fill='none' stroke-linecap='round' stroke-linejoin='round'>
                  <path d='M5 12h14'></path>
                  <path d='M12 5l7 7-7 7'></path>
                </svg>"), project_path(project), class: 'inline-flex items-center md:mb-2 lg:mb-0' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'layouts/footer' %>
